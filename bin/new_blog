#!/usr/bin/env bash
# CURRENT_PWD=$(pwd)
# trap "cd ${CURRENT_PWD}" 0 2 3 15

cd ~/Clients/wendbaar/blog/

CURRENT_DATE=$(date "+%Y/%m")
CURRENT_TIME=$(date "+%Y-%m-%d %H:%M:00 CES")
BASE_DIR="src/_posts"

LC_ALL=C

# first, strip underscores
CLEAN=${*//_/}
# next, replace spaces with underscores
CLEAN=${CLEAN// /_}
# now, clean out anything that's not alphanumeric or an underscore
CLEAN=${CLEAN//[^a-zA-Z0-9_]/}
# finally, lowercase with TR
CLEAN=`echo -n $CLEAN | tr A-Z a-z`

mkdir -p "${BASE_DIR}/${CURRENT_DATE}"
FILENAME="${BASE_DIR}/${CURRENT_DATE}/${CLEAN}.md"

echo "---" > ${FILENAME}
echo "layout: post" >> ${FILENAME}
echo "title:  \"${@}\"" >> ${FILENAME}
echo "date:   ${CURRENT_TIME}" >> ${FILENAME}
echo "---" >> ${FILENAME}

# Open t
/usr/local/bin/stree .
# open in VSCode
/usr/local/bin/code ${BASE_DIR}
/usr/local/bin/code ${FILENAME}

# cd ${CURRENT_PWD}
